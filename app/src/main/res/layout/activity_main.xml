<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        app:title=""
        android:background="@color/green"
        app:logo="@drawable/logo_resized"
        android:padding="18dp"
        >
        <TextView
            android:id="@+id/time_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="16dp"
            android:fontFamily="@font/m_regular"
            android:text="TIME_DATA"
            android:textSize="18sp"
            android:layout_gravity="end|bottom"
            >

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        app:menu="@menu/bottom_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/rounded_nav_bar"

        app:itemIconSize="28dp"

        app:itemRippleColor="@color/green"
        app:itemTextAppearanceInactive="@color/black"
        app:itemTextColor="@color/green"
        app:itemActiveIndicatorStyle="@color/white"
        app:itemIconTint="@color/bottom_nav_selector"

        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</LinearLayout>